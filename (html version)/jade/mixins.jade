-var n = 0;
mixin class(name, day, minage, maxage, gender, startdate, enddate, starttime, endtime, price, costper, image)
  -n++
  article.class(min-age="#{minage}" max-age="#{maxage}" gender="#{gender}" day="#{day}")
    if image
      .img-cover(style="background-image:url(https://unsplash.it/30#{n}/20#{n})")
    .inner
      h3
        a(href="class.html")= name
      .audience
        .days
          span.day= day
        .age-range
          span Ages: 
          span.age.min= minage
          |  - 
          span.age.max= maxage
        if (gender=="F")
          .gender
            span Girls Only
        else if (gender=="M")
          .gender
            span Boys Only
      //-
        if image
          img.cover(src="https://unsplash.it/300/200")
      if block
        summary
          block
      .under-summary
        .duration
          span.start= startdate
          | -
          span.end= enddate
        .times
          span.time.start= starttime
          | -
          span.time.end= endtime
        .tuition
          span.price= price
          span.costper= costper
        .signup
          a.button(href="class.html") Learn More

mixin event(name, date, time, cost, image)
  article.event
    if image
      .img-cover(style="background-image:url(https://unsplash.it/300/200)")
    .inner
      h3
        a(href="event.html")= name
      //-
        if image
          img.cover(src="")
      .glance
        span.cost= cost
        time.date= date
        time.time= time
      if block
        summary
          block
      a.button(href="event.html") Learn More

mixin specialEvent(name)
  article.special.event
    .inner
      h3
        a(href="event.html")= name
      if block
        summary
          block
      .button-holder
        a.button.alternate(href="event.html") Learn More
-var s = 0
mixin staffMember(name, jobTitle, facebook, linkedin, twitter, pinterest, email)
  -s++
  article.staff-member
    .inner
      h3= name
      h4= jobTitle
      img.profile(src="https://unsplash.it/20#{s}/30#{s}")
      if block
        summary
          block
      summary.contact
        if (facebook && facebook != "")
          a.facebook(href="#{facebook}")
            svg(viewBox="0 0 100 100")
              use.box(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialBox")
              use.symbol(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialFacebook")
        if (linkedin && linkedin != "")
          a.linkedin
            svg(viewBox="0 0 100 100")
              use.box(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialBox")
              use.symbol(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialLinkedIn")
        if (twitter && twitter != "")
          a.twitter
            svg(viewBox="0 0 100 100")
              use.box(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialBox")
              use.symbol(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialTwitter")
        if (pinterest && pinterest != "")
          a.pinterest
            svg(viewBox="0 0 100 100")
              use.box(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialBox")
              use.symbol(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialPinterest")
        if (email && email != "")
          a.email
            svg(viewBox="0 0 100 100")
              use.box(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialBox")
              use.symbol(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#SocialEmail")